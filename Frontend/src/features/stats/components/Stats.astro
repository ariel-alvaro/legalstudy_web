    <div class="absolute full bg-red-700 opacity-60"></div>

    <Item number={99} symbol="%">
        <FaBalanceScale className="w-20 h-20 laptop:w-24 laptop:h-24 text-gold-color"/>
    </Item>
    <Item number={500} symbol="+">
        <FaBriefcase className="w-20 h-20 laptop:w-24 laptop:h-24 text-gold-color"/>
    </Item>
    <Item number={99} symbol="%">
        <FaPeopleGroup className="w-20 h-20 laptop:w-24 laptop:h-24 text-gold-color"/>
    </Item>

</section>

